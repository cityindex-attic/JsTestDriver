<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="com.google.jstestdriver.eclipse.ui"
            name="JavaScript">
      </category>
      <view
            category="com.google.jstestdriver.eclipse.ui"
            class="com.google.jstestdriver.eclipse.ui.views.JsTestDriverView"
            icon="icons/JsTestDriver.png"
            id="com.google.jstestdriver.eclipse.ui.views.JsTestDriverView"
            name="JsTestDriver">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="com.google.jstestdriver.eclipse.ui.views.JsTestDriverView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.TaskList">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.viewActions">
      <viewContribution
            id="com.google.jstestdriver.eclipse.ui.jsTestDriverViewContribution"
            targetID="com.google.jstestdriver.eclipse.ui.views.JsTestDriverView">
         <action
               class="com.google.jstestdriver.eclipse.ui.views.ServerStartStopViewActionDelegate"
               icon="icons/startServer.png"
               id="com.google.jstestdriver.eclipse.ui.serverStartStopAction"
               label="Start Server"
               menubarPath="additions"
               style="push"
               toolbarPath="additions"
               tooltip="Start Server">
         </action>
      </viewContribution>
   </extension>

</plugin>
